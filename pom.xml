<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
						http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.meleeton</groupId>
	<artifactId>twitter4j-spring-boot-starter-parent</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>twitter4j-spring-boot-starter-parent</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<twitter4j.version>4.0.6</twitter4j.version>
		<spring-boot.version>1.5.2.RELEASE</spring-boot.version>
	</properties>

	<modules>
		<module>twitter4j-spring-boot-autoconfigure</module>
		<module>twitter4j-spring-boot-starter</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-dependencies</artifactId>
				<version>${spring-boot.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>

			<dependency>
				<groupId>org.twitter4j</groupId>
				<artifactId>twitter4j-core</artifactId>
				<version>${twitter4j.version}</version>
			</dependency>
			<dependency>
			    <groupId>org.twitter4j</groupId>
			    <artifactId>twitter4j-stream</artifactId>
				<version>${twitter4j.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

</project>
